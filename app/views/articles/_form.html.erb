<%= form_for(@article) do |f| %>
<% if @article.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

	<ul>
		<% @article.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :name %>
	<br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :description %>
	<br />
	<%= f.text_field :description %>
</div>
<div class="field">
	<%= f.label :price %>
	<br />
	<%= f.text_field :price %>
</div>
<div class="field">
	<%= f.label :total_in_shelf %>
	<br />
	<%= f.number_field :total_in_shelf %>
</div>
<div class="field">
	<%= f.label :total_in_vault %>
	<br />
	<%= f.number_field :total_in_vault %>
</div>

<div class="field">
	<%= f.label :store_name %>
	<br />
	<%= select("article", "store_id", Store.all.collect {|s| [ s.name, s.id]})%>
</div>

<div class="actions">
	<%= f.submit %>
</div>
<% end %>
